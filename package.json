{
  "name": "kazubot",
  "version": "1.0.0",
  "description": "a bot for animal crossing new horizons discord servers",
  "main": "/src/js/bot.js",
  "dependencies": {
    "discord.js": "^12.2.0",
    "mocha": "^7.2.0"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "eslint": "^7.1.0"
  },
  "scripts": {
    "lint": "eslint src/js",
    "testLocal": "secrethub run --var env=local mocha",
    "testGithub": "echo $TOKEN | mocha",
    "local": "secrethub run --var env=local pm2 start src/js/bot.js --time",
    "cloud": "secrethub run --var env=cloud pm2 start src/js/bot.js --time",
    "start": "node src/js/bot.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kazubot/kazubot.git"
  },
  "keywords": [
    "discord",
    "bot",
    "animal",
    "crossing"
  ],
  "author": "mdonatelli",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/kazubot/kazubot/issues"
  },
  "homepage": "https://github.com/kazubot/kazubot#readme"
}
